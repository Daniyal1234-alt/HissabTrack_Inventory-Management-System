SELECT 
	a.adminID,
    s.supplierID, 
    s.companyName, 
    s.location, 
    s.registrationNum, 
    s.password,
    cp.productID, 
    cp.quantity
FROM 
    Supplier s
JOIN 
	adminSupplier a ON a.supplierID = s.supplierID
LEFT JOIN 
    ProductCatalogProducts cp ON cp.catalogID = s.supplierID
LEFT JOIN 
    Product p ON cp.productID = p.productID

  -- Update NULL values to 0
UPDATE ProductCatalogProducts
SET quantity = 0
WHERE quantity IS NULL;

-- Add productID 3 for catalogID 2 with a specific quantity
INSERT INTO ProductCatalogProducts (catalogID, productID, quantity)
VALUES (2, 3, 10); -- Replace 10 with your desired quantity

-- Add productID 4 for catalogID 2 with a specific quantity
INSERT INTO ProductCatalogProducts (catalogID, productID, quantity)
VALUES (2, 4, 15); -- Replace 15 with your desired quantity
DELETE FROM ProductCatalogProducts
WHERE NOT (
    (catalogID = 2 AND productID = 4)
    OR (catalogID = 2 AND productID = 3)
    OR (catalogID = 2 AND productID = 4 AND quantity = 15)
);
Insert into ProductCatalogProducts VALUES (1,1,100), (1,2,30);
